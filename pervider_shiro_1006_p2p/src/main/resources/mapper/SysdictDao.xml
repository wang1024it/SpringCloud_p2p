<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wyy.pervider_shiro_1006_p2p.dao.SysdictDao">

     <!-- 数据库与实体的映射对象 -->
    <resultMap type="com.wyy.common_p2p.entity.sys.Sysdict" id="SysdictMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="sn" column="sn" jdbcType="VARCHAR"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="description" column="description" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysdictMap">
        select
          id, sn, title, description
        from sysdict
        where id = #{id}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryPager" resultMap="SysdictMap">
        select
          id, sn, title, description
        from sysdict
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="sn != null and sn != ''">
                and sn like concat('%', #{sn}, '%')
            </if>
            <if test="title != null and title != ''">
                and title like concat('%', #{title}, '%')
            </if>
            <if test="description != null and description != ''">
                and description like concat('%', #{description}, '%')
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into sysdict(sn, title, description)
        values (#{sn}, #{title}, #{description})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update sysdict
        <set>
            <if test="sn != null and sn != ''">
                sn = #{sn},
            </if>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="description != null and description != ''">
                description = #{description},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from sysdict where id = #{id}
    </delete>
    
</mapper>